<Window x:Class="Les_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Les_13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <ListBox x:Name="authorListBox" SelectionChanged="authorListBox_SelectionChanged"/>
          

        <StackPanel Grid.Column="1">
            <ListBox x:Name="postListBox"/>
            <Button x:Name="deleteButton" Click="deleteButton_Click" Margin="5">Delete</Button>
            <Button x:Name="createButton" Click="createButton_Click" Margin="5">Create</Button>
        </StackPanel>
    </Grid>
</Window>
