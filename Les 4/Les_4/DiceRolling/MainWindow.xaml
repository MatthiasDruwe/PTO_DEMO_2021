            </StackPanel>
            <StackPanel>
                <Image x:Name="rolledNumber2Image" Width="112" Height="112"/>
                <Label x:Name="rolledNumber2Label"/>
                <Button Click="Button_Click2">Roll</Button>
            </StackPanel>
            <StackPanel>
                <Image x:Name="rolledNumber3Image" Width="112" Height="112"/>
                <Label x:Name="rolledNumber3Label"/>
                <Button Click="Button_Click3">Roll</Button>
            </StackPanel>
        </StackPanel>
            <Button Click="Button_Click">Roll All</Button>
        </StackPanel>

    </Grid>
</Window>
